<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/hd_hse_common_phone_li_bottom"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/hd_hse_common_phone_bt_agree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/hd_wov_btn_click_selector"
            android:text="同 意"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <Button
            android:id="@+id/hd_hse_common_phone_bt_disagree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/hd_wov_btn_click_selector"
            android:text="不同意"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <Button
            android:id="@+id/hd_hse_common_phone_bt_submit_agree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/hd_wov_btn_click_selector"
            android:text="提交"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/hd_hse_common_phone_expanablelistview_taskitem_id"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/hd_hse_common_phone_li_bottom"
        android:background="#ffffff"
        android:cacheColorHint="#00000000"
        android:childDivider="@drawable/hd_hse_component_list_line"
        android:descendantFocusability="blocksDescendants"
        android:listSelector="#00000000"
        android:paddingLeft="2dp"
        android:paddingRight="2dp">

    </ExpandableListView>

</RelativeLayout>