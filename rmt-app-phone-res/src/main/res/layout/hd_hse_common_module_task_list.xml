<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/authorizelist_tab"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/gray">

            <TextView
                android:id="@+id/authorizelist_zysq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="授权记录"/>


            <TextView
                android:id="@+id/authorizelist_sqjl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="被授权记录"/>


        </LinearLayout>

        <com.hd.hse.common.module.phone.custom.ZYPListView
            android:id="@+id/hd_hse_common_module_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>






    <ImageView
        android:id="@+id/authorizelist_add"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        android:src="@drawable/hse_ss_phone_app_supervision_list_add" />

</RelativeLayout>
