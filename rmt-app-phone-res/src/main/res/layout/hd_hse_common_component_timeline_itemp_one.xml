<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/hd_hse_component_timeline_line_top"
            android:layout_width="5dip"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="@color/yellow" />

        <ImageView
            android:id="@+id/hd_hse_component_timeline_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/hd_hse_common_component_timeline_ed" >
        </ImageView>

        <TextView
            android:id="@+id/hd_hse_component_timeline_line_buttom"
            android:layout_width="5dip"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="@color/yellow" />
    </LinearLayout>
    <TextView
        android:id="@+id/hd_hse_component_timeline_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="50dp"
        android:textColor="#000000"
        android:textSize="20sp" >
    </TextView>
</LinearLayout>