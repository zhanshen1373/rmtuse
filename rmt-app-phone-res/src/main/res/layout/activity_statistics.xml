<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/topview"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/starttime_linear"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/gray"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/starttime_title"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="开始日期"
                android:textColor="@color/hd_hse_common_alerttext_black" />

            <TextView
                android:id="@+id/starttime_text"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/go_next" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3b3b3b"></View>

        <LinearLayout
            android:id="@+id/endtime_linear"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/gray"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="结束日期"
                android:textColor="@color/hd_hse_common_alerttext_black" />

            <TextView
                android:id="@+id/endtime_text"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/go_next" />

        </LinearLayout>

        <View
            android:id="@+id/endtime_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3b3b3b"></View>

        <LinearLayout
            android:id="@+id/dept_linear"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/gray"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="属地单位"
                android:textColor="@color/hd_hse_common_alerttext_black" />

            <TextView
                android:id="@+id/dept_text"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/go_next" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3B3B3B"></View>

        <LinearLayout
            android:id="@+id/zyptype_linear"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/gray"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="作业票类型"
                android:textColor="@color/hd_hse_common_alerttext_black" />

            <TextView
                android:id="@+id/zyptype_text"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/go_next" />

        </LinearLayout>

        <View
            android:id="@+id/zyptype_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3B3B3B"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/gray"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/surebutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/hd_hse_common_component_phone_actionbar_background"
                android:text="查询" />

        </LinearLayout>
    </LinearLayout>

    <WebView
        android:id="@+id/statistics_webview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></WebView>


</LinearLayout>
