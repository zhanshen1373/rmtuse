<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/hd_hse_module_fragment_camera_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:padding="8dp" >

        <TextView
            android:id="@+id/hd_hse_module_fragment_camera_tv_cancel_take_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="取消"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/hd_hse_module_fragment_camera_tv_shutter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="8dp"
            android:text="拍照"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </RelativeLayout>

    <com.hd.hse.common.module.phone.camera2.CameraPreview
        android:id="@+id/hd_hse_module_camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/hd_hse_module_fragment_camera_bottom_bar" />

</RelativeLayout>