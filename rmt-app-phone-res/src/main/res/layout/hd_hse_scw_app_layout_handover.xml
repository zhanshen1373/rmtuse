<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hd_hse_scw_app_mainlayoutid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hd_hse_common_white"
    android:padding="@dimen/padding_medium" 
    android:gravity="center_horizontal"
    android:orientation="horizontal">
	<TextView 
        android:id="@+id/hd_hse_scw_jjb_title_tv"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:text="承诺信息"
        android:layout_marginTop="@dimen/margin_medium"
        android:gravity="center_vertical|right"
        android:padding="@dimen/padding_medium"
        android:textSize="@dimen/text_size_small" />
    <TextView
        android:id="@+id/hd_hse_scw_jjb_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:background="@drawable/hd_hse_common_edit_nocorners_style"
        android:ellipsize="end"
        android:ems="8"
        android:maxLines="2"
        android:padding="@dimen/padding_medium"
        android:textSize="@dimen/text_size_small" >
    </TextView>

</LinearLayout>