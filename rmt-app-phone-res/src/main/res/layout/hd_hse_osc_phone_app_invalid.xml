<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hd_hse_common_white"
    android:fadingEdge="vertical"
    android:orientation="vertical"
    android:padding="@dimen/padding_medium"
    android:scrollbars="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical" >

        <TableRow
            android:id="@+id/hd_hse_common_workclose_tr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/hd_hse_osc_phone_app_invalid_tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginLeft="@dimen/hd_hse_close_exp"
                android:paddingRight="@dimen/margin_small"
                android:text="作废时间："
                android:textColor="@color/hd_hse_common_alerttext_black"
                android:textSize="@dimen/text_size_small"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/hd_hse_osc_phone_app_invalid_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_medium"
                android:textSize="@dimen/text_size_small" />
        </TableRow>

        <TableRow
            android:id="@+id/hd_hse_common_explain_tr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium">

            <TextView
                android:id="@+id/hd_hse_osc_phone_app_invalid_tv_desc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginLeft="@dimen/hd_hse_close_exp"
                android:paddingRight="@dimen/margin_small"
                android:text="作废原因："
                android:textColor="@color/hd_hse_common_alerttext_black"
                android:textSize="@dimen/text_size_small"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/hd_hse_osc_phone_app_invalid_et1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/hd_hse_common_edit_nocorners_style"
                android:ems="10"
                android:maxLines="5"
                android:padding="@dimen/padding_medium"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/hd_hse_osc_phone_app_invalid_ib1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:background="@drawable/hd_hse_common_btn_more_style" />
        </TableRow>
    </TableLayout>

    <com.hd.hse.common.module.phone.custom.ExamineListView
        android:id="@+id/hd_hse_osc_app_phone_obsolete_examinelistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_medium"/>

    <Button
        android:id="@+id/hd_hse_osc_app_phone_obsolete_bt_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:clickable="true"
        android:text="保存"
        android:textColor="@color/hd_hse_common_alerttext_black"
        android:textSize="@dimen/text_size_large"
        android:textStyle="normal"
        android:visibility="gone" />

</LinearLayout>