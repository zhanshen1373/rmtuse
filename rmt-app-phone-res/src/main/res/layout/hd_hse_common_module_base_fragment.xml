<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    >
    
    <FrameLayout 
        android:id="@+id/hd_hse_common_module_container"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1"
        />
    
    <FrameLayout
        android:id="@+id/hd_hse_common_module_bottom_container"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="0" 
        >
    
        <com.hd.hse.common.component.phone.custom.BottomActionBar
            android:id="@+id/hd_hse_common_module_bottom_action_bar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            />
        
        <TextView
        android:id="@+id/hd_hse_common_module_btn" 
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:text="保存"
        android:textSize="@dimen/text_size_xlarge"
        android:background="@color/hd_hse_common_module_bottom_bg_color"
        android:gravity="center"
        android:textColor="#ffffff"
        />
        
        
        
 	</FrameLayout>
    
   

</LinearLayout>
