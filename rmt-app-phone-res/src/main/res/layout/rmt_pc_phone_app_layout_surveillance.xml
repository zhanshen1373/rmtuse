                    android:gravity="center_vertical"
                    android:text="违章人员"
                    android:textColor="@color/hd_hse_common_describetext_gray"
                    android:textSize="@dimen/hd_common_textsize" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/hse_pc_phone_app_layout_surveillance_ed_illegal_person"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/hd_common_edittext_bg"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/hse_pc_phone_app_layout_surveillance_item_edittext_paddinglefght"
                        android:textColor="@color/hd_hse_common_component_phone_fontnum"
                        android:textSize="@dimen/hd_common_textsize" />

                    <Button
                        android:id="@+id/hse_pc_phone_app_layout_surveillance_bt_illegal_person"
                        android:layout_width="@dimen/hse_pc_phone_app_layout_surveillance_item_height"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/hd_hse_photo_add" />
                </RelativeLayout>
            </LinearLayout>
            <!-- 责任单位 -->

            <LinearLayout
