                android:layout_height="@dimen/hse_pc_phone_app_layout_surveillance_item_double_height"
                android:layout_marginBottom="@dimen/hse_pc_phone_app_layout_surveillance_item_marginbottom">

                <TextView
                    android:layout_width="@dimen/hse_pc_phone_app_layout_surveillance_item_textview_width"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="*问题描述"
                    android:textColor="@color/hd_hse_common_describetext_gray"
                    android:textSize="@dimen/hd_common_textsize" />

                <EditText
                    android:id="@+id/hse_pc_phone_app_layout_surveillance_ed_describe_problem"
