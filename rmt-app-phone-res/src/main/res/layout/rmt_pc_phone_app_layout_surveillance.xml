                        android:layout_height="match_parent"
                        android:background="@drawable/hd_common_edittext_bg"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/hse_pc_phone_app_layout_surveillance_item_edittext_paddinglefght"
                        android:textColor="@color/hd_hse_common_component_phone_fontnum"
                        android:textSize="@dimen/hd_common_textsize" />

                    <ImageView
                        android:layout_width="@dimen/hse_pc_phone_app_layout_surveillance_item_height"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/hd_hse_photo_add" />
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hse_pc_phone_app_layout_surveillance_item_height"
                android:layout_marginBottom="@dimen/hse_pc_phone_app_layout_surveillance_item_marginbottom">

                <TextView
                    android:layout_width="@dimen/hse_pc_phone_app_layout_surveillance_item_textview_width"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="责任归属"
                    android:textColor="@color/hd_hse_common_describetext_gray"
                    android:textSize="@dimen/hd_common_textsize" />

                <EditText
                    android:id="@+id/hse_pc_phone_app_layout_surveillance_ed_zrgs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/hd_common_edittext_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/hse_pc_phone_app_layout_surveillance_item_edittext_paddinglefght"
                    android:textColor="@color/hd_hse_common_component_phone_fontnum"
                    android:textSize="@dimen/hd_common_textsize" />
            </LinearLayout>

            <!--新加三个字段  条款分类 、 条款内容、分数-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hse_pc_phone_app_layout_surveillance_item_height"
                android:layout_marginBottom="@dimen/hse_pc_phone_app_layout_surveillance_item_marginbottom">

                <TextView
                    android:layout_width="@dimen/hse_pc_phone_app_layout_surveillance_item_textview_width"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="条款分类"
                    android:textColor="@color/hd_hse_common_describetext_gray"
                    android:textSize="@dimen/hd_common_textsize" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/hse_pc_phone_app_layout_surveillance_tv_termType"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/hd_common_edittext_bg"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/hse_pc_phone_app_layout_surveillance_item_edittext_paddinglefght"
                        android:textColor="@color/hd_hse_common_component_phone_fontnum"
                        android:textSize="@dimen/hd_common_textsize" />

                    <ImageView
                        android:layout_width="@dimen/hse_pc_phone_app_layout_surveillance_item_height"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/hd_hse_photo_add" />
                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hse_pc_phone_app_layout_surveillance_item_height"
                android:layout_marginBottom="@dimen/hse_pc_phone_app_layout_surveillance_item_marginbottom">

                <TextView
                    android:layout_width="@dimen/hse_pc_phone_app_layout_surveillance_item_textview_width"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="条款内容"
                    android:textColor="@color/hd_hse_common_describetext_gray"
                    android:textSize="@dimen/hd_common_textsize" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/hse_pc_phone_app_layout_surveillance_tv_termContent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/hd_common_edittext_bg"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/hse_pc_phone_app_layout_surveillance_item_edittext_paddinglefght"
                        android:textColor="@color/hd_hse_common_component_phone_fontnum"
                        android:textSize="@dimen/hd_common_textsize" />

                    <ImageView
                        android:layout_width="@dimen/hse_pc_phone_app_layout_surveillance_item_height"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/hd_hse_photo_add" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hse_pc_phone_app_layout_surveillance_item_height"
                android:layout_marginBottom="@dimen/hse_pc_phone_app_layout_surveillance_item_marginbottom">

                <TextView
                    android:layout_width="@dimen/hse_pc_phone_app_layout_surveillance_item_textview_width"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="得分"
                    android:textColor="@color/hd_hse_common_describetext_gray"
                    android:textSize="@dimen/hd_common_textsize" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
