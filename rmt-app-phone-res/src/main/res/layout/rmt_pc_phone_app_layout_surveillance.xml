                        android:layout_alignParentRight="true"
                        android:background="@drawable/hd_hse_photo_add"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <!-- 罚款金额 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hse_pc_phone_app_layout_surveillance_item_height"
                android:layout_marginBottom="@dimen/hse_pc_phone_app_layout_surveillance_item_marginbottom"
                android:visibility="gone">

                <TextView
                    android:layout_width="@dimen/hse_pc_phone_app_layout_surveillance_item_textview_width"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="罚款金额"
                    android:textColor="@color/hd_hse_common_describetext_gray"
                    android:textSize="@dimen/hd_common_textsize" />

                <EditText
                    android:id="@+id/hse_pc_phone_app_layout_surveillance_ed_penalty_money"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/hd_common_edittext_bg"
                    android:gravity="center_vertical"
                    android:numeric="decimal"
                    android:paddingLeft="@dimen/hse_pc_phone_app_layout_surveillance_item_edittext_paddinglefght"
                    android:textColor="@color/hd_hse_common_component_phone_fontnum"
                    android:textSize="@dimen/hd_common_textsize" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hse_pc_phone_app_layout_surveillance_item_height"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/hse_pc_phone_app_layout_surveillance_checkbox_rectify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/hd_hse_common_component_checkbox_selector"
                        android:text="是否已整改"
                        android:textSize="@dimen/hd_common_textsize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/hse_pc_phone_app_layout_surveillance_checkbox_blacklist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/hd_hse_common_component_checkbox_selector"
                        android:text="建议人员转黑名单"
                        android:textSize="@dimen/hd_common_textsize" />
                </LinearLayout>
            </LinearLayout>
            <!-- 点击是否整改出来的内容 -->

            <LinearLayout
                android:id="@+id/hse_pc_phone_app_layout_surveillance_li_zg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/hse_pc_phone_app_layout_surveillance_padding_fs"
                android:paddingRight="@dimen/hse_pc_phone_app_layout_surveillance_padding_fs"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/rmt_common_divider_height"
                    android:background="@color/hd_hse_common_btn_bg_gray" />

                <com.hd.hse.common.module.phone.custom.HorizontalListView
                    android:id="@+id/hse_pc_phone_app_layout_surveillance_lv_zg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/hse_pc_phone_app_layout_surveillance_padding"></com.hd.hse.common.module.phone.custom.HorizontalListView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/rmt_common_divider_height"
                    android:background="@color/hd_hse_common_btn_bg_gray" />
            </LinearLayout>
