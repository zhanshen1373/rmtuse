<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hd_hse_common_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:text="装置:"
                android:textColor="#999999"
                android:drawableLeft="@drawable/icon_need_to_write"
                android:textSize="@dimen/hd_common_textsize" />

            <EditText
                android:id="@+id/device_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:background="@drawable/hd_hse_common_edit_style"
                android:textColor="@color/hd_hse_common_alerttext_black"
                android:textSize="@dimen/hd_common_textsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:text="区域:"
                android:drawableLeft="@drawable/icon_need_to_write"
                android:textColor="#999999"
                android:textSize="@dimen/hd_common_textsize" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp">

                <TextView
                    android:id="@+id/work_site_name_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/hd_common_edittext_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/hse_pc_phone_app_layout_surveillance_item_edittext_paddinglefght"
                    android:textColor="@color/hd_hse_common_component_phone_fontnum"
                    android:textSize="@dimen/hd_common_textsize" />

                <Button
                    android:id="@+id/work_site_name_button"
                    android:layout_width="@dimen/hse_pc_phone_app_layout_surveillance_item_height"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/hd_hse_photo_add" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="设备名称:"
                android:drawableLeft="@drawable/icon_need_to_write"
                android:textColor="#999999"
                android:textSize="@dimen/hd_common_textsize" />

            <EditText
                android:id="@+id/equipment_name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:background="@drawable/hd_hse_common_edit_style"
                android:textColor="@color/hd_hse_common_alerttext_black"
                android:textSize="@dimen/hd_common_textsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="设备类型:"
                android:drawableLeft="@drawable/icon_need_to_write"
                android:textColor="#999999"
                android:textSize="@dimen/hd_common_textsize" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp">

                <TextView
                    android:id="@+id/equipment_type_textview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/hd_common_edittext_bg"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/hse_pc_phone_app_layout_surveillance_item_edittext_paddinglefght"
                    android:textColor="@color/hd_hse_common_component_phone_fontnum"
                    android:textSize="@dimen/hd_common_textsize" />

                <Button
                    android:id="@+id/equipment_type_button"
                    android:layout_width="@dimen/hse_pc_phone_app_layout_surveillance_item_height"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/hd_hse_photo_add" />
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交出前"
            android:textSize="@dimen/hd_common_textsize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:text="温度:"
                android:drawableLeft="@drawable/icon_need_to_write"
                android:textColor="#999999"
                android:textSize="@dimen/hd_common_textsize" />

            <EditText
                android:id="@+id/pretemperature_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:background="@drawable/hd_hse_common_edit_style"
                android:textColor="@color/hd_hse_common_alerttext_black"
                android:textSize="@dimen/hd_common_textsize" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:text="压力:"
                android:drawableLeft="@drawable/icon_need_to_write"
                android:textColor="#999999"
                android:textSize="@dimen/hd_common_textsize" />

            <EditText
                android:id="@+id/prepressure_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:background="@drawable/hd_hse_common_edit_style"
                android:textColor="@color/hd_hse_common_alerttext_black"
                android:textSize="@dimen/hd_common_textsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:text="介质:"
                android:drawableLeft="@drawable/icon_need_to_write"
                android:textColor="#999999"
                android:textSize="@dimen/hd_common_textsize" />

            <EditText
                android:id="@+id/prejz_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:background="@drawable/hd_hse_common_edit_style"
                android:textColor="@color/hd_hse_common_alerttext_black"
                android:textSize="@dimen/hd_common_textsize" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交出后"
            android:textSize="@dimen/hd_common_textsize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:text="温度:"
                android:drawableLeft="@drawable/icon_need_to_write"
                android:textColor="#999999"
                android:textSize="@dimen/hd_common_textsize" />

            <EditText
                android:id="@+id/posttemperature_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:background="@drawable/hd_hse_common_edit_style"
                android:textColor="@color/hd_hse_common_alerttext_black"
                android:textSize="@dimen/hd_common_textsize" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:text="压力:"
                android:drawableLeft="@drawable/icon_need_to_write"
                android:textColor="#999999"
                android:textSize="@dimen/hd_common_textsize" />

            <EditText
                android:id="@+id/postpressure_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:background="@drawable/hd_hse_common_edit_style"
                android:textColor="@color/hd_hse_common_alerttext_black"
                android:textSize="@dimen/hd_common_textsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:text="介质:"
                android:drawableLeft="@drawable/icon_need_to_write"
                android:textColor="#999999"
                android:textSize="@dimen/hd_common_textsize" />

            <EditText
                android:id="@+id/postjz_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:background="@drawable/hd_hse_common_edit_style"
                android:textColor="@color/hd_hse_common_alerttext_black"
                android:textSize="@dimen/hd_common_textsize" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>