<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/rmt_cancle_worksubtask_activity_layout_ensure"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/hd_hse_oea_check_bg"
        android:text="保  存"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_xlarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_medium"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:text="取消说明:"
            android:textSize="@dimen/text_size_large" />

        <EditText
            android:id="@+id/rmt_cancle_worksubtask_activity_layout_ed_stop_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_medium"
            android:background="@drawable/hd_hse_common_edit_nocorners_style"
            android:lines="4"
            android:padding="@dimen/padding_medium"
            android:textSize="@dimen/text_size_large" />


    </LinearLayout>

</RelativeLayout>